<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/fairy">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fairy_tale_title"
            android:id="@+id/fairyTitle"
            android:textColor="@color/Green"
            android:textSize="@dimen/title_size"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="270dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/page"
            android:id="@+id/fairy_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    <ScrollView
        android:layout_width="255dp"
        android:layout_height="255dp"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:layout_below="@+id/fairyTitle">
        <TextView
                android:layout_width="255dp"
                android:layout_height="255dp"
                android:text="@string/fairy_tale"
                android:id="@+id/fairy_text"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_alignLeft="@+id/scrollView"
                android:layout_below="@+id/fairyTitle"/>
    </ScrollView>

</RelativeLayout>